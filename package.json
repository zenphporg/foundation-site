{
  "private": true,
  "type": "module",
  "scripts": {
    "cb": "composer update && bun update",
    "build": "bun zz && vite build",
    "build:ssr": "bun zz && vite build && vite build --ssr",
    "dev": "bun zz && vite",
    "format": "prettier --write resources/",
    "format:check": "prettier --check resources/",
    "lint": "eslint . --fix",
    "fix": "./vendor/bin/fixr --dirty && bun run format && bun run lint",
    "test:js": "vitest --run",
    "test:js:watch": "vitest",
    "test:js:ui": "vitest --ui",
    "test:js:coverage": "vitest --coverage --run",
    "prod": "bun zz && vite build && vite build --ssr",
    "zz": "php artisan ziggy:generate --types && php artisan zorah:generate"
  },
  "dependencies": {
    "@headlessui/vue": "^1.7.23",
    "@inertiajs/vue3": "^2.2.10",
    "@tailwindcss/forms": "^0.5.10",
    "@tailwindcss/vite": "^4.1.16",
    "@types/node": "^24.9.1",
    "@types/ziggy-js": "^1.8.0",
    "@vitejs/plugin-vue": "^6.0.1",
    "@vueuse/core": "^13.9.0",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "concurrently": "^9.2.1",
    "laravel-echo": "^2.2.4",
    "laravel-vite-plugin": "^2.0.1",
    "lucide": "^0.525.0",
    "lucide-vue-next": "^0.546.0",
    "pinia": "^3.0.3",
    "postcss-import": "^16.1.1",
    "pusher-js": "^8.4.0",
    "reka-ui": "^2.6.0",
    "tailwind-merge": "^3.3.1",
    "tailwindcss": "^4.1.16",
    "tailwindcss-animate": "^1.0.7",
    "typescript": "^5.9.3",
    "vite": "^7.1.12",
    "vue": "^3.5.22",
    "ziggy-js": "^2.6.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^20.1.0",
    "@commitlint/config-conventional": "^20.0.0",
    "@eslint/js": "^9.38.0",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/github": "^12.0.0",
    "@vitest/coverage-v8": "^4.0.1",
    "@vitest/ui": "4.0.1",
    "@vue/eslint-config-typescript": "^14.6.0",
    "@vue/runtime-core": "^3.5.22",
    "@vue/test-utils": "^2.4.6",
    "babel-plugin-istanbul": "^7.0.1",
    "eslint": "^9.38.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-vue": "^10.5.1",
    "husky": "^9.1.7",
    "jsdom": "^27.0.1",
    "prettier": "^3.6.2",
    "prettier-plugin-organize-imports": "^4.3.0",
    "prettier-plugin-tailwindcss": "^0.7.1",
    "semantic-release": "^25.0.1",
    "tw-animate-css": "^1.4.0",
    "typescript-eslint": "^8.46.2",
    "unplugin-auto-import": "^20.2.0",
    "unplugin-vue-components": "^30.0.0",
    "vitest": "^4.0.1",
    "vue-tsc": "^3.1.1"
  },
  "optionalDependencies": {
    "@rollup/rollup-linux-x64-gnu": "4.52.5",
    "@tailwindcss/oxide-linux-x64-gnu": "^4.1.16",
    "lightningcss-linux-x64-gnu": "^1.30.2"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ],
    "rules": {
      "header-max-length": [
        2,
        "always",
        120
      ],
      "type-enum": [
        2,
        "always",
        [
          "breaking",
          "feat",
          "fix",
          "refactor",
          "docs",
          "wip",
          "chore",
          "style",
          "test"
        ]
      ]
    }
  },
  "trustedDependencies": [
    "@tailwindcss/oxide"
  ]
}
